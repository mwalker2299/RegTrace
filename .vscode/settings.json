{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "python.analysis.typeCheckingMode": "strict",

  "ruff.enable": true,

  "eslint.validate": [
    "javascript",
    "typescript",
    "typescriptreact"
  ],

  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true
  }
}